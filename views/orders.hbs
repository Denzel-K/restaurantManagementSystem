<section class="orders">
  <div class="orderHistory">
    <div class="newBox">
      <button class="newOrderRedirect" type="button">
        <span>New order</span>
        <img src="images/add.svg" alt="add">
      </button>
    </div>

    <div id="category-buttons"></div>

    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Order Number</th>
          <th>Total Price</th>
          <th>Payment Method</th>
          <th>Status</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody id="orderHistoryBody">
        {{!-- Table rows will be inserted here dynamically --}}
      </tbody>
    </table>

    <div class="pagination">
      <button id="prev">Previous</button>
      <p>Page: <span id="current-page">1</span></p>
      <button id="next">Next</button>
    </div>
  </div>

  <div class="orderDetails" style="display: none;">
    <!-- Order details form will go here -->
  </div>

  <!-- Hidden container to display receipt details -->
  <div class="receiptBox" style="display: none;">
    <div class="receiptContent">
      <!-- Receipt details will be injected here -->
     
    </div>
  </div>

</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="js/orders.js"></script>
